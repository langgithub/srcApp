<?xml version="1.0" encoding="utf-8"?>
<com.lang.acrapp.view.ArcMenu 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:lang="http://schemas.android.com/apk/res/com.lang.scrapp"
       
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        lang:position="left_bottom"
        lang:radius="150dp">
        
    
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <ImageView 
	            android:id="@+id/id_button"
	            android:layout_height="80dp"
	            android:layout_width="80dp"
	            android:layout_centerInParent="true"
	            android:src="@drawable/menu_main"/>        
	    </RelativeLayout>
	    
	    <ImageView 
	            android:layout_height="50dp"
	            android:layout_width="50dp"
	            android:src="@drawable/menu_user"
	            android:tag="user"/>  
	    <ImageView 
	            android:layout_height="50dp"
	            android:layout_width="50dp"
	            android:src="@drawable/menu_search"
	            android:tag="search"/>       
	    <ImageView 
	            android:layout_height="50dp"
	            android:layout_width="50dp"
	            android:src="@drawable/menu_mylocation"
	            android:tag="mylocation"/> 
	     <ImageView 
	            android:layout_height="50dp"
	            android:layout_width="50dp"
	            android:src="@drawable/menu_scalecontrol"
	            android:tag="scalecontrol"/> 
         <ImageView 
	            android:layout_height="50dp"
	            android:layout_width="50dp"
	            android:src="@drawable/goplace"
	            android:tag="thought"/> 

    </com.lang.acrapp.view.ArcMenu>
